  <script>
    // QR Code handling
    const qr = '<%= qr %>';
    const qrContainer = document.getElementById('qrcode');
    const loading = document.getElementById('loading');
    const success = document.getElementById('success');
    const error = document.getElementById('error');

    if (qr) {
      const image = new Image();
      image.src = qr;
      image.className = 'rounded-lg shadow-lg max-w-full h-auto mx-auto';
      image.alt = 'WhatsApp QR Code';

      image.onload = function () {
        loading.classList.add('hidden');
        qrContainer.classList.remove('hidden');
        qrContainer.appendChild(image);

        // Auto-refresh every 30 seconds for new QR
        setTimeout(() => {
          loading.classList.remove('hidden');
          qrContainer.classList.add('hidden');
          
          setTimeout(() => {
            window.location.reload();
          }, 1000);
        }, 30000);
      };

      image.onerror = function () {
        loading.classList.add('hidden');
        error.classList.remove('hidden');
      };
    } else {
      loading.classList.add('hidden');
      error.classList.remove('hidden');
    }

    // Check connection status periodically
    function checkConnectionStatus() {
      // This could be enhanced to check actual session status
      // For now, we'll just rely on the QR refresh mechanism
    }
    
    // Start checking connection status
    setInterval(checkConnectionStatus, 5000);
  </script>
