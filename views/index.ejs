  <script>
    function createSession() {
      const sessionName = document.getElementById('sessionName').value.trim();
      if (!sessionName) {
        alert('Please enter a session name');
        return;
      }

      const url = `/start-session?session=${encodeURIComponent(sessionName)}&scan=true`;
      window.open(url, '_blank');
    }

    function testEndpoint() {
      const url = window.location.origin + '/sessions?key=mysupersecretkey';
      window.open(url, '_blank');
    }

    async function checkSessions() {
      const statusDiv = document.getElementById('sessionStatus');

      // Show loading state
      statusDiv.innerHTML = `
        <div class="flex items-center justify-center p-4">
          <div class="loading loading-spinner loading-sm mr-2"></div>
          <span class="text-gray-600">Checking sessions...</span>
        </div>
      `;

      try {
        const response = await fetch('/sessions?key=mysupersecretkey', {
          method: 'GET',
          headers: {
            'Content-Type': 'application/json',
          }
        });

        // Accept 200 or 303 as success
        if (!(response.ok || response.status === 303)) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }

        const data = await response.json();
        console.log('Sessions response:', data); // Debug log

        // If data exists, treat as success
        if (data.data && Array.isArray(data.data)) {
          const sessions = data.data;
          if (sessions.length > 0) {
            statusDiv.innerHTML = `
              <div class="font-bold text-green-600 mb-3 text-lg flex items-center justify-center gap-2">
          <span class="inline-block bg-green-100 text-green-600 rounded-full px-3 py-1 text-sm">✅</span>
          Active Sessions <span class="badge badge-outline badge-success ml-2">${sessions.length}</span>
              </div>
              <div class="divide-y divide-base-200 rounded-lg overflow-hidden bg-base-50 shadow-sm">
          ${sessions.map(session => `
            <div class="flex justify-between items-center px-4 py-3 bg-base-100 hover:bg-base-200 transition">
              <span class="font-mono text-blue-700 text-base">${session}</span>
              <span class="badge badge-success badge-sm flex items-center gap-1">
                <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
                Connected
              </span>
            </div>
          `).join('')}
              </div>
            `;
          } else {
            statusDiv.innerHTML = `
              <div class="text-center py-6">
          <div class="text-yellow-600 font-semibold text-lg mb-2 flex items-center justify-center gap-2">
            <span class="inline-block bg-yellow-100 text-yellow-600 rounded-full px-2 py-1 text-sm">⚠️</span>
            No active sessions found
          </div>
          <div class="text-sm text-gray-500">Create a new session to get started</div>
              </div>
            `;
          }
        } else {
          statusDiv.innerHTML = `
        <div class="text-center py-4">
          <div class="text-red-600 font-medium">❌ Failed to fetch sessions</div>
          <div class="text-sm text-gray-500 mt-1">Server responded with error</div>
        </div>
          `;
        }
      } catch (error) {
        console.error('Error fetching sessions:', error); // Debug log
        statusDiv.innerHTML = `
          <div class="text-center py-4">
        <div class="text-red-600 font-medium">🔴 Connection Error</div>
        <div class="text-sm text-gray-500 mt-1">${error.message}</div>
        <div class="text-xs text-gray-400 mt-2">Check if the server is running on port 5001</div>
          </div>
        `;
      }
    }
  </script>
