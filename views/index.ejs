  <script>
    function initTabs() {
      const tabButtons = document.querySelectorAll('.tab[data-tab]');

      tabButtons.forEach(button => {
        button.addEventListener('click', function () {
          const targetTab = this.dataset.tab;

          document.querySelectorAll('.tab-content').forEach(content => {
            content.classList.add('hidden');
          });

          tabButtons.forEach(tab => {
            tab.classList.remove('tab-active');
          });

          document.getElementById(targetTab).classList.remove('hidden');
          this.classList.add('tab-active');
        });
      });
    }

    document.addEventListener('DOMContentLoaded', function () {
      initTabs();
    });

    function createSession() {
      const sessionName = document.getElementById('session-name').value;
      if (!sessionName.trim()) {
        alert('Please enter a session name');
        return;
      }

      const url = `/start-session?session=${encodeURIComponent(sessionName)}&scan=true`;
      window.open(url, '_blank');

      // Show success message
      const toast = document.createElement('div');
      toast.className = 'toast toast-top toast-end';
      toast.innerHTML = `
        <div class="alert alert-success">
          <span>Session "${sessionName}" is being created. Check the new tab for QR code.</span>
        </div>
      `;
      document.body.appendChild(toast);

      setTimeout(() => {
        document.body.removeChild(toast);
      }, 3000);

      document.getElementById('session-name').value = '';
    }

    // Send test message functionality
    function sendTestMessage() {
      const phoneNumber = document.getElementById('phone-number').value;
      if (!phoneNumber.trim()) {
        alert('Please enter a phone number');
        return;
      }

      // Simple validation for phone number format
      if (!/^\d{10,15}$/.test(phoneNumber.replace(/\D/g, ''))) {
        alert('Please enter a valid phone number (10-15 digits)');
        return;
      }

      const data = {
        session: 'main', // Default session
        to: phoneNumber,
        text: 'Hello! This is a test message from WhatsApp API Gateway üëã'
      };

      fetch('/send-message', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data)
      })
        .then(response => response.json())
        .then(result => {
          if (result.status) {
            // Show success message
            const toast = document.createElement('div');
            toast.className = 'toast toast-top toast-end';
            toast.innerHTML = `
            <div class="alert alert-success">
              <span>Test message sent successfully to ${phoneNumber}!</span>
            </div>
          `;
            document.body.appendChild(toast);

            setTimeout(() => {
              document.body.removeChild(toast);
            }, 3000);

            document.getElementById('phone-number').value = '';
          } else {
            throw new Error(result.message || 'Failed to send message');
          }
        })
        .catch(error => {
          // Show error message
          const toast = document.createElement('div');
          toast.className = 'toast toast-top toast-end';
          toast.innerHTML = `
          <div class="alert alert-error">
            <span>Error: ${error.message}</span>
          </div>
        `;
          document.body.appendChild(toast);

          setTimeout(() => {
            document.body.removeChild(toast);
          }, 3000);
        });
    }

    // Add enter key support for forms
    document.getElementById('session-name').addEventListener('keypress', function (e) {
      if (e.key === 'Enter') {
        createSession();
      }
    });

    document.getElementById('phone-number').addEventListener('keypress', function (e) {
      if (e.key === 'Enter') {
        sendTestMessage();
      }
    });

    // Smooth scrolling for navigation
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  </script>
