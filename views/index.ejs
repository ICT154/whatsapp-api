  <!-- Hero Section -->
  <div class="hero min-h-[50vh] bg-gradient-to-r from-green-400 to-blue-500">
    <div class="hero-content text-center text-white">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold mb-6">WhatsApp API Gateway</h1>
        <p class="text-xl mb-8 opacity-90">
          Powerful and easy-to-use WhatsApp messaging API for your applications
        </p>
        <button class="btn btn-primary btn-lg mr-4">Get Started</button>
        <button class="btn btn-outline btn-lg text-white border-white hover:bg-white hover:text-gray-800">
          Documentation
        </button>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container mx-auto p-8">
    <!-- Stats -->
    <div class="stats shadow w-full mb-8">
      <div class="stat">
        <div class="stat-figure text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
            class="inline-block w-8 h-8 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z">
            </path>
          </svg>
        </div>
        <div class="stat-title">Active Sessions</div>
        <div class="stat-value text-primary">0</div>
        <div class="stat-desc">Currently connected</div>
      </div>

      <div class="stat">
        <div class="stat-figure text-secondary">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
            class="inline-block w-8 h-8 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <div class="stat-title">Messages Sent</div>
        <div class="stat-value text-secondary">0</div>
        <div class="stat-desc">Today</div>
      </div>

      <div class="stat">
        <div class="stat-figure text-accent">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
            class="inline-block w-8 h-8 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4">
            </path>
          </svg>
        </div>
        <div class="stat-title">API Calls</div>
        <div class="stat-value">0</div>
        <div class="stat-desc">This month</div>
      </div>
    </div>

    <!-- Feature Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
      <!-- Session Management -->
      <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow">
        <div class="card-body">
          <h2 class="card-title text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
              stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
            </svg>
            Session Management
          </h2>
          <p>Manage multiple WhatsApp sessions simultaneously with easy-to-use APIs.</p>
          <div class="card-actions justify-end">
            <button class="btn btn-primary btn-sm">Manage Sessions</button>
          </div>
        </div>
      </div>

      <!-- Message API -->
      <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow">
        <div class="card-body">
          <h2 class="card-title text-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
              stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            Send Messages
          </h2>
          <p>Send text, images, documents, and more through WhatsApp with simple API calls.</p>
          <div class="card-actions justify-end">
            <button class="btn btn-secondary btn-sm">Send Message</button>
          </div>
        </div>
      </div>

      <!-- QR Scanner -->
      <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow">
        <div class="card-body">
          <h2 class="card-title text-accent">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
              stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z" />
            </svg>
            QR Code Login
          </h2>
          <p>Quick and secure session authentication using QR codes.</p>
          <div class="card-actions justify-end">
            <button class="btn btn-accent btn-sm">Scan QR</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-2xl mb-6">Quick Actions</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Create Session Form -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">Create New Session</span>
            </label>
            <div class="input-group">
              <input type="text" placeholder="Session name..." class="input input-bordered flex-1" />
              <button class="btn btn-primary">Create</button>
            </div>
            <label class="label">
              <span class="label-text-alt">Enter a unique name for your WhatsApp session</span>
            </label>
          </div>

          <!-- Send Test Message -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">Send Test Message</span>
            </label>
            <div class="input-group">
              <input type="tel" placeholder="Phone number..." class="input input-bordered flex-1" />
              <button class="btn btn-secondary">Send</button>
            </div>
            <label class="label">
              <span class="label-text-alt">Format: +62812345678 (include country code)</span>
            </label>
          </div>
        </div>

        <!-- API Example -->
        <div class="divider">API Example</div>

        <div class="mockup-code">
          <pre data-prefix="$"><code>curl -X POST http://localhost:5000/api/send-message</code></pre>
          <pre data-prefix=">" class="text-warning"><code>-H "Content-Type: application/json"</code></pre>
          <pre data-prefix=">"
            class="text-success"><code>-d '{"session": "main", "to": "+6281234567890", "text": "Hello World!"}'</code></pre>
        </div>
      </div>
    </div>
  </div>

